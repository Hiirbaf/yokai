<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/source_layout"
    android:background="?background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Contenedor principal -->
    <FrameLayout
        android:id="@+id/catalogue_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="eu.kanade.tachiyomi.ui.source.browse.BrowseSourceController">

        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/progress"
            android:indeterminate="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            tools:visibility="visible"/>

    </FrameLayout>

    <!-- ðŸ”¥ Nueva barra inferior tipo CÃ³digo 1 (sin comportamiento que crashea) -->
    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/floatingBrowseBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:padding="8dp"
        app:singleSelection="true">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/popularGroup"
            style="?attr/materialButtonOutlinedStyle"
            android:checkable="true"
            android:text="@string/popular"
            app:icon="@drawable/ic_heart_24dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/latestGroup"
            style="?attr/materialButtonOutlinedStyle"
            android:checkable="true"
            android:text="@string/latest"
            app:icon="@drawable/ic_new_releases_24dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/filterGroup"
            style="?attr/materialButtonOutlinedStyle"
            android:checkable="true"
            android:text="@string/filter"
            app:icon="@drawable/ic_filter_list_24dp"/>

    </com.google.android.material.button.MaterialButtonToggleGroup>

    <!-- Vista vacÃ­a -->
    <eu.kanade.tachiyomi.widget.EmptyView
        android:id="@+id/empty_view"
        tools:paddingTop="300dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
